<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    xmlns:tools="http://schemas.android.com/tools" 
    tools:ignore="NestedScrolling">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
            
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">

            <ScrollView android:id="@+id/basic_tab"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
              
                <LinearLayout android:orientation="vertical"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content">
                
                    <LinearLayout
                        android:id="@+id/base_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/base_label"
                            style="@style/RecordHeader"/>

                        <View style="@style/Separator"/>
                        
                        <RelativeLayout android:id="@+id/base_group"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        >
                            <Button android:id="@+id/base_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="@string/go_to"
                                    />

                            <TextView
                                android:id="@+id/base"
                                style="@style/RecordField"
                                android:layout_width="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@id/base_btn"
                                android:clickable="true"/>
                                          
                        </RelativeLayout>

                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/group_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/group_label"
                            style="@style/RecordHeader"
                            android:text="@string/group_header"/>
    
                        <View style="@style/Separator"/>

                        <TextView
                            android:id="@+id/group"
                            style="@style/RecordField"/>
                    
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/user_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/username_label"
                            style="@style/RecordHeader"
                            android:text="@string/username_header" />

                        <View style="@style/Separator"/>

                        <TextView
                            android:id="@+id/user"
                            style="@style/RecordField"/>

                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/password_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/password_label"
                            style="@style/RecordHeader"
                            android:text="@string/password_header" />

                        <View style="@style/Separator"/>

                        <TextView
                            android:id="@+id/password"
                            style="@style/RecordField"
                            android:clickable="true"/>

                    </LinearLayout>
                        
                    <LinearLayout
                        android:id="@+id/url_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/url_label"
                            style="@style/RecordHeader"
                            android:text="@string/url" />

                        <View style="@style/Separator"/>

                        <TextView
                            android:id="@+id/url"
                            style="@style/RecordField"
                            android:autoLink="web"/>

                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/email_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/email_label"
                            style="@style/RecordHeader"
                            android:text="@string/email_header" />
    
                        <View style="@style/Separator"/>

                        <TextView
                            android:id="@+id/email"
                            style="@style/RecordField"
                            android:autoLink="email"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/expiration_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/expiration_label"
                            style="@style/RecordHeader"
                            android:text="@string/expiration_header" />
    
                        <View style="@style/Separator"/>

                        <TextView
                            android:id="@+id/expiration"
                            style="@style/RecordField"/>

                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/protected_row"
                        style="@style/RecordRow">
                    
                        <TextView
                            style="@style/RecordHeader"
                            android:text="@string/protected_record_header" />
    
                        <View style="@style/Separator"/>

                        <TextView
                            style="@style/RecordField"
                            android:text="@string/unprotect_to_modify"/>

                    </LinearLayout>
                    
                    <ListView android:id="@+id/references"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:padding="3dip"
                              />
                </LinearLayout>
            </ScrollView>                          

            <RelativeLayout android:id="@+id/history_tab"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                          
                <CheckBox android:id="@+id/history_enabled"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/enabled"/>
                          
                <TextView android:id="@+id/history_max_size"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:layout_alignTop="@id/history_enabled"
                          android:layout_alignBottom="@id/history_enabled"
                          android:gravity="center_vertical"
                          android:layout_marginLeft="3dip"/>

                <TextView android:id="@+id/history_max_size_label"
                          android:text="@string/max_size_label"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_toLeftOf="@id/history_max_size"
                          android:layout_alignTop="@id/history_enabled"
                          android:layout_alignBottom="@id/history_enabled"
                          android:gravity="center_vertical"/>
                          
                <View android:id="@+id/history_sep"
                      android:layout_width="fill_parent"
                      android:layout_height="1dip"
                      android:layout_below="@id/history_enabled"
                      android:background="#FF909090"/>

                <ListView android:id="@+id/history"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_below="@id/history_sep"/>

            </RelativeLayout>
                     
            <ScrollView android:id="@+id/notes_tab"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        
                <TextView android:id="@+id/notes"
                          android:autoLink="all"
                          android:clickable="false"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"/>

            </ScrollView>

        </FrameLayout>
    </LinearLayout>
    
</TabHost>
