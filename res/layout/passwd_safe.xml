<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <RelativeLayout android:id="@+id/current_group_panel"
                    android:visible="false"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

        <ImageView android:id="@+id/current_group_icon"
                   android:src="@drawable/folder_up_rev"
                   android:layout_width="36dp"
                   android:layout_height="36dp"
                   android:contentDescription="@string/up"
                   />

        <TextView android:id="@+id/current_group_label"
                      android:text="@string/group"
                      android:gravity="center_vertical"
                      android:layout_marginBottom="2dp"
                      android:layout_toRightOf="@id/current_group_icon"
                      android:layout_alignTop="@id/current_group_icon"
                      android:layout_alignBottom="@id/current_group_icon"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      />

        <View
            style="@style/Separator.Light"
            android:layout_below="@id/current_group_label"/>

    </RelativeLayout>

    <ListView android:id="@android:id/list"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:fastScrollEnabled="true"
              android:drawSelectorOnTop="false"/>

    <TextView android:id="@android:id/empty"
              android:textSize="16sp"
              android:textStyle="bold"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:layout_margin="3dp"
              android:text="@string/no_records"/>

    <RelativeLayout android:id="@+id/query_panel"
                    android:visible="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

        <View
            android:id="@+id/query_sep"
            style="@style/Separator.Light"/>

        <ImageButton
            android:id="@+id/query_clear_btn"
            style="@android:style/Widget.ImageWell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/query_sep"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/clear"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>

        <TextView
            android:id="@+id/query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/query_clear_btn"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

    </RelativeLayout>
</LinearLayout>
