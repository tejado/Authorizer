<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/record_edit"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" 
              xmlns:tools="http://schemas.android.com/tools" 
              tools:ignore="NestedScrolling,NestedWeights">
       
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/rec_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="24sp"/>
        
        <Button
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/done"/>
        
    </LinearLayout>

    <TextView
        android:id="@+id/error_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"/>

    <View android:layout_width="fill_parent"
          android:layout_height="1dip"
          android:layout_marginTop="2dip"
          android:layout_marginBottom="2dip"
          android:background="#FF909090"/>
          
    <ScrollView android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
            <TableLayout android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:stretchColumns="1"
                         android:shrinkColumns="1">
                <TableRow android:id="@+id/type_row">
                    <TextView android:text="@string/type"/>
                    <Spinner android:id="@+id/type"
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:prompt="@string/choose_type"
                             android:entries="@array/record_type"/>
                </TableRow>
                <TableRow android:id="@+id/title_row">
                    <TextView android:text="@string/title"/>
                    <EditText android:id="@+id/title"
                              android:singleLine="true"
                              android:inputType="textCapSentences|textAutoCorrect"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </TableRow>
        
                <TableRow android:id="@+id/group_row">
                    <TextView android:text="@string/group"/>
                    <Spinner android:id="@+id/group"
                             android:drawSelectorOnTop="true"
                             android:prompt="@string/choose_group"
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"/>
                </TableRow>
    
                <TableRow android:id="@+id/url_row">
                    <TextView android:text="@string/url"/>
                    <EditText android:id="@+id/url"
                              android:singleLine="true"
                              android:inputType="textUri"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </TableRow>
        
                <TableRow android:id="@+id/email_row">
                    <TextView android:text="@string/email"/>
                    <EditText android:id="@+id/email"
                              android:singleLine="true"
                              android:inputType="textEmailAddress"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </TableRow>
        
                <TableRow android:id="@+id/user_row">
                    <TextView android:text="@string/username"/>
                    <EditText android:id="@+id/user"
                              android:singleLine="true"
                              android:inputType="text"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </TableRow>
        
                <TableRow android:id="@+id/password_row">
                    <TextView android:text="@string/password_and_confirm"
                              android:gravity="center_vertical"
                              android:layout_height="fill_parent"/>
                    <LinearLayout android:orientation="horizontal"
                                  android:layout_width="fill_parent"
                                  android:layout_height="wrap_content">
                        <EditText android:id="@+id/password"
                                  android:singleLine="true"
                                  android:inputType="textPassword"
                                  android:layout_weight="1"
                                  android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/password_confirm"
                                  android:singleLine="true"
                                  android:inputType="textPassword"
                                  android:layout_weight="1"
                                  android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"/>
                    </LinearLayout>
                </TableRow>
                
                <TableRow android:id="@+id/password_link_row"
                          android:visibility="gone">
                    <TextView android:id="@+id/password_link_label"
                              android:layout_height="fill_parent"
                              />
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <Button android:id="@+id/password_link_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="@string/choose"
                                />
                        <TextView android:id="@+id/password_link"
                                  android:layout_width="fill_parent"
                                  android:layout_height="match_parent"
                                  android:layout_alignParentLeft="true" 
                                  android:layout_toLeftOf="@id/password_link_btn" 
                                  android:gravity="center_vertical"
                                  />
                    </RelativeLayout>
                </TableRow>
            </TableLayout>

            <View android:id="@+id/history_group_sep"
                  android:layout_width="fill_parent"
                  android:layout_height="1dip"
                  android:layout_marginTop="2dip"
                  android:layout_marginBottom="2dip"
                  android:background="#FF909090"/>

            <RelativeLayout android:id="@+id/history_group"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            >
                <Button android:id="@+id/history_addremove"
                        android:text="@string/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        />
                <TextView android:id="@+id/history_label"
                          android:text="@string/history"
                          android:textSize="24sp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentLeft="true"
                          android:layout_alignTop="@id/history_addremove"
                          android:layout_alignBaseline="@id/history_addremove"
                          android:layout_alignBottom="@id/history_addremove"
                          />
                <CheckBox android:id="@+id/history_enabled"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/enabled"
                          android:layout_below="@id/history_label"
                          android:layout_alignParentLeft="true"
                          />
                <EditText android:id="@+id/history_max_size"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:singleLine="true"
                          android:minWidth="50dip"
                          android:inputType="number"
                          android:layout_below="@id/history_label"
                          android:layout_alignParentRight="true"
                          />
                <TextView android:id="@+id/history_max_size_label"
                          android:text="@string/max_size_label"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/history_label"
                          android:layout_toLeftOf="@+id/history_max_size"
                          android:layout_toRightOf="@+id/history_enabled"
                          android:layout_alignBaseline="@+id/history_max_size"
                          android:gravity="right"
                          />
                <ListView android:id="@+id/history"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/history_enabled"
                          />
            </RelativeLayout>

            <View android:id="@+id/notes_sep"
                  android:layout_width="fill_parent"
                  android:layout_height="1dip"
                  android:layout_marginTop="2dip"
                  android:layout_marginBottom="2dip"
                  android:background="#FF909090"/>
                  
            <TextView android:id="@+id/notes_label"
                      android:text="@string/notes"
                      android:textSize="24sp"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      />
            <EditText android:id="@+id/notes"
                      android:inputType="textCapSentences|textMultiLine|textLongMessage|textAutoCorrect"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
