<resources>
    <!--
      Base application themes for API 14+. These themes completely replace
      AppBase themes from res/values/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppBaseTheme_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppBaseThemeDark" parent="Theme.AppCompat">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppBaseThemeDark_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="ListItemText">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

</resources>
