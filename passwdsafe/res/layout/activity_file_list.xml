<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/fullscreen_vertical_margin"
    android:paddingLeft="@dimen/fullscreen_horizontal_margin"
    android:paddingRight="@dimen/fullscreen_horizontal_margin"
    android:paddingTop="@dimen/fullscreen_vertical_margin"
    tools:context=".FileListActivity">

    <fragment
        android:id="@+id/files"
        android:name="com.jefftharris.passwdsafe.FileListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_file_list"/>

    <FrameLayout
        android:id="@+id/sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
