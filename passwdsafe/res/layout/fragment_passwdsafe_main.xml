<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/fullscreen_vertical_margin"
    android:paddingLeft="@dimen/fullscreen_horizontal_margin"
    android:paddingRight="@dimen/fullscreen_horizontal_margin"
    android:paddingTop="@dimen/fullscreen_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:text="Choose or Create File"/>

        <Button
            android:id="@+id/btn_prefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:text="@string/preferences"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/release_notes"/>

</LinearLayout>
