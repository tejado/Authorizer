<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NestedScrolling">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">

            <ScrollView android:id="@+id/basic_tab"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                <LinearLayout android:orientation="vertical"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/base_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/base_label"
                            style="@style/RecordHeader"/>

                        <View style="@style/Separator"/>

                        <RelativeLayout android:id="@+id/base_group"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        >
                            <Button android:id="@+id/base_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="@string/go_to"
                                    />

                            <TextView
                                android:id="@+id/base"
                                style="@style/RecordField"
                                android:layout_width="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@id/base_btn"
                                android:clickable="true"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/group_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/group_label"
                            style="@style/RecordHeader"
                            android:text="@string/group_header"/>

                        <View style="@style/Separator"/>

                        <TextView
                            android:id="@+id/group"
                            style="@style/RecordField"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/user_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/username_label"
                            style="@style/RecordHeader"
                            android:text="@string/username_header" />

                        <View
                            android:id="@+id/username_sep"
                            style="@style/Separator"/>

                        <TextView
                            android:id="@+id/user"
                            style="@style/RecordField.Large"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/password_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/password_label"
                            style="@style/RecordHeader"
                            android:text="@string/password_header" />

                        <View
                            android:id="@+id/password_sep"
                            style="@style/Separator"/>

                        <TextView
                            android:id="@+id/password"
                            style="@style/RecordField.Large"
                            android:clickable="true"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/url_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/url_label"
                            style="@style/RecordHeader"
                            android:text="@string/url" />

                        <View style="@style/Separator"/>

                        <TextView
                            android:id="@+id/url"
                            style="@style/RecordField"
                            android:autoLink="web"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/email_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/email_label"
                            style="@style/RecordHeader"
                            android:text="@string/email_header" />

                        <View style="@style/Separator"/>

                        <TextView
                            android:id="@+id/email"
                            style="@style/RecordField"
                            android:autoLink="email"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/times_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/times_label"
                            style="@style/RecordHeader"
                            android:text="@string/times_header" />

                        <View style="@style/Separator"/>

                        <TableLayout
                            android:id="@+id/times"
                            style="@style/RecordField.Small"
                            android:shrinkColumns="1"
                            android:stretchColumns="1">

                            <TableRow android:id="@+id/creation_time_row">

                                <TextView
                                    style="@style/TableLabelColumn"
                                    android:text="@string/created"/>

                                <TextView
                                    android:id="@+id/creation_time"
                                    android:layout_width="wrap_content"/>
                            </TableRow>

                            <TableRow android:id="@+id/last_mod_time_row">

                                <TextView
                                    style="@style/TableLabelColumn"
                                    android:text="@string/modified"/>

                                <TextView
                                    android:id="@+id/last_mod_time"
                                    android:layout_width="wrap_content"/>
                            </TableRow>

                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/protected_row"
                        style="@style/RecordRow">

                        <TextView
                            style="@style/RecordHeader"
                            android:text="@string/protected_record_header" />

                        <View style="@style/Separator"/>

                        <TextView
                            style="@style/RecordField"
                            android:text="@string/unprotect_to_modify"/>

                    </LinearLayout>

                    <ListView android:id="@+id/references"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:padding="3dip"
                              />
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/password_tab"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/policy_label"
                        style="@style/RecordHeader"
                        android:text="@string/policy_header"/>

                    <View
                        android:id="@+id/policy_sep"
                        style="@style/Separator"/>

                    <com.jefftharris.passwdsafe.view.PasswdPolicyView
                        android:id="@+id/policy"
                        style="@style/RecordField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"/>

                    <LinearLayout
                        android:id="@+id/password_times_row"
                        style="@style/RecordRow">

                        <TextView
                            android:id="@+id/password_times_label"
                            style="@style/RecordHeader"
                            android:text="@string/password_times_header" />

                        <View style="@style/Separator"/>

                        <TableLayout
                            android:id="@+id/password_times"
                            style="@style/RecordField.Small"
                            android:shrinkColumns="1"
                            android:stretchColumns="1">

                            <TableRow android:id="@+id/expiration_time_row">

                                <TextView
                                    style="@style/TableLabelColumn"
                                    android:text="@string/expiration"/>

                                <TextView
                                    android:id="@+id/expiration_time"
                                    android:layout_width="wrap_content"/>
                            </TableRow>

                            <TableRow android:id="@+id/expiration_interval_row">

                                <TextView
                                    style="@style/TableLabelColumn"
                                    android:text="@string/interval"/>

                                <TextView
                                    android:id="@+id/expiration_interval"
                                    android:layout_width="wrap_content"/>
                            </TableRow>

                            <TableRow android:id="@+id/password_mod_time_row">

                                <TextView
                                    style="@style/TableLabelColumn"
                                    android:text="@string/modified"/>

                                <TextView
                                    android:id="@+id/password_mod_time"
                                    android:layout_width="wrap_content"/>
                            </TableRow>

                        </TableLayout>
                    </LinearLayout>

                    <TextView
                        style="@style/RecordHeader"
                        android:text="@string/history_header"/>

                    <View style="@style/Separator"/>

                    <RelativeLayout
                        style="@style/RecordField"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/history_enabled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enabled"
                            android:textAppearance="?android:textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/history_max_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/history_enabled"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/history_enabled"
                            android:layout_marginLeft="3dip"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/history_max_size_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/history_enabled"
                            android:layout_alignTop="@id/history_enabled"
                            android:layout_toLeftOf="@id/history_max_size"
                            android:gravity="center_vertical"
                            android:text="@string/max_size_label"/>

                        <ListView
                            android:id="@+id/history"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/history_enabled"/>

                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>

            <ScrollView android:id="@+id/notes_tab"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                <TextView android:id="@+id/notes"
                          android:autoLink="all"
                          android:clickable="false"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"/>

            </ScrollView>

        </FrameLayout>
    </LinearLayout>

</TabHost>
