<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BorderlessButton">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>

    <style name="InputMethodText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="RecordRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RecordHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="RecordField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="RecordField.Small">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="RecordField.Large">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="SelectableView">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>

    <style name="TableLabelColumn">
        <item name="android:paddingRight">3dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="TextViewSpinner">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@drawable/spinner_background_holo_dark</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <color name="transparent">#00000000</color>

</resources>
