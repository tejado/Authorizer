<RelativeLayout style="@style/ListItem"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                tools:ignore="RtlSymmetry">

    <ImageButton android:id="@+id/item_menu"
                 style="@style/Widget.AppCompat.Button.Borderless"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:contentDescription="@string/menu"
                 android:src="@drawable/ic_action_navigation_more_vert_dark"/>

    <TextView android:id="@+id/password"
              style="@style/ListItemText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_toLeftOf="@id/item_menu"
              android:layout_toStartOf="@id/item_menu"/>

    <TextView android:id="@+id/date"
              style="@style/ListItemSeconday"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/password"
              android:layout_alignStart="@id/password"
              android:layout_below="@id/password"
              android:layout_toLeftOf="@id/item_menu"
              android:layout_toStartOf="@id/item_menu"/>

</RelativeLayout>
