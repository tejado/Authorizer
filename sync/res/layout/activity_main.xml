<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/google_drive"
        android:drawablePadding="6dp"
        android:gravity="fill_vertical"
        android:text="@string/google_drive"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Button
        android:id="@+id/gdrive_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onGdriveChoose"
        android:text="@string/choose_account"/>

    <TextView
        android:id="@+id/gdrive_acct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false"/>

    <RelativeLayout
        android:id="@+id/gdrive_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/gdrive_interval_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/gdrive_interval_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/sync_interval_label"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <Spinner
                android:id="@+id/gdrive_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/interval_array"/>
        </LinearLayout>

        <Button
            android:id="@+id/gdrive_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gdrive_interval_box"
            android:drawableLeft="@android:drawable/ic_popup_sync"
            android:onClick="onGdriveSync"
            android:padding="12dp"
            android:text="@string/sync"/>

        <Button
            android:id="@+id/gdrive_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gdrive_interval_box"
            android:layout_toRightOf="@id/gdrive_sync"
            android:drawableLeft="@android:drawable/ic_delete"
            android:onClick="onGdriveClear"
            android:padding="12dp"
            android:text="@string/clear"/>
    </RelativeLayout>

    <View
        style="@style/Separator"
        android:layout_margin="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_launcher_passwdsafe"
        android:drawablePadding="6dp"
        android:gravity="fill_vertical"
        android:paddingBottom="6dp"
        android:paddingTop="12dp"
        android:text="@string/passwdsafe"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onLaunchPasswdSafeClick"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:drawablePadding="6dp"
        android:text="@string/open"/>

    <View
        style="@style/Separator"
        android:layout_margin="6dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onLaunchSyncLogs"
        android:text="@string/logs"/>

</LinearLayout>
